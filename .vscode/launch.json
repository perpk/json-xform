    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha Tests",
            "type": "pwa-node",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["test/**/*"]
        },
        {
            "name": "run mocha",
            "type": "pwa-node",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["test/**/*"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        }
    ]
}